{% extends 'base.html.twig' %}

{% block title %}Contactos{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/datepicker.css') }}">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/main.js') }}"></script>
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/datepicker.min.js') }}"></script>

{% endblock %}

{% block body %}


    <div class="container-fluid1">
        <div class="row">
            <div class="col-sm-5 col-md-3 sidebar">
                <div class="col-lg-offset-1 col-md-10 col-lg-offset-3">


                    <h3 class="page-header" >{% block titulo %}<span class="glyphicon glyphicon-info-sign"> Información</span>{% endblock %}</h3>
                    <ul class="nav nav-sidebar">
                        <li class="{% block m1%} {% endblock %}"><a href="{{ path('user_perfil') }}"><span class="glyphicon glyphicon-user"> Mi Perfil</span></a></li>
                        <li class="{% block m2%} {% endblock %}"><a href="{{ path('user_edit') }}"><span class="glyphicon glyphicon-user"> Editar Perfil</span></a></li>
                        <li class="{% block m3%} {% endblock %}"><a href="{{ path('user_listar') }}" ><span class="glyphicon glyphicon-list"> Mis Solicitud</span></a></li>
                        <li class="{% block m4%} {% endblock %}"><a href="{{ path('user_solicitud') }}" ><span class="glyphicon glyphicon-list"> Nueva Solicitud</span></a></li>
                        <li class="{% block m5%} {% endblock %}"><a href="{{ path('user_buscar') }}" ><span class="glyphicon glyphicon-search"> Buscar</span></a></li>
                        <li class="{% block m6%} {% endblock %}"><a href="{{ path('desaparecido_register') }}" ><span class="glyphicon glyphicon-search"> Reportar</span></a></li>
                        <li class="{% block m7%} {% endblock %}"><a href="{{ path('all_preguntas') }}" ><span class="glyphicon glyphicon-search"> Preguntas Frecuentes </span></a></li>
                        <li class="{% block m8%} {% endblock %}"><a href="{{ path('all_contactos') }}" ><span class="glyphicon glyphicon-search"> Contactos</span></a></li>
                    </ul>
                </div>
            </div>
            <div class=" col-lg-offset-1 col-md-5 col-lg-offset-7 ">
                <h2 class="page-header text-center">
                    Bienvenid@
                    {{  app.user ? app.user.__toString() : 'Desaparecidos!' }}!

                    <div>
                        <div class="container-fluid1">

                            <div class="mapIframe">
                                <iframe src="https://www.google.com/maps/d/embed?mid=1b-GfVmftD-GlmTxlUO7o9ZxT_4o" width="100%" height="480"></iframe>
                            </div>

                            <div class="row" id="contactosInfor">
                                <div class="col-xs-8 col-sm-6">
                                    <h3>Línea de atención al cliente</h3>
                                    <p>+501 223 73 32From 11:00 to 20:00 </p>
                                    <p>desaparecidos@hotmail.com</p>
                                    <p>  Para propuestas de cooperación
                                        business@advcash.com</p>
                                </div>
                                <div class="col-xs-4 col-sm-6">
                                    <h3>Información Desaparecidas</h3>
                                    <p>Organización orientada al beneficio de la comunidad</p>
                                </div>
                            </div>

                            <div class="row " id="contactos">
                                <h3 class="page-header" >{% block titulo3 %} &nbsp &nbsp &nbsp &nbsp &nbsp  &nbsp &nbspContactanos{% endblock %}</h3>
                                <div class="  row  ">
                                    <div class=" col-md-12">
                                        <form class="col-lg-offset-1 col-md-6">
                                            <div class="form-group">
                                                <input type="email" class="form-control" id="nombre" aria-describedby="emailHelp" placeholder="Nombre">
                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="E-mail">
                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control" id="telefono" aria-describedby="emailHelp" placeholder="Teléfono">
                                            </div>

                                        </form>

                                        <div class="col-lg-5 col-md-4">
                                            <div class="form-group">
                                                <textarea class="form-control" placeholder="Tu pregunta"  id="exampleTextarea" rows="3"></textarea>
                                            </div>
                                            <td><button type="button" class="btn btn-info">ENVIAR</button></td>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </h2>

            </div>


        </div>
    </div>

{% endblock %}