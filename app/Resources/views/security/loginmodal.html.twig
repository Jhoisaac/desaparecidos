<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="loginModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4><span class="glyphicon glyphicon-lock"></span> Inicio de Sesión </h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {{ form_start(formulario) }}
                    <div class="form-group">
                        <span class="glyphicon glyphicon-user"> </span> {{ form_label(formulario._username, 'Usuario') }}
                        {{ form_widget(formulario._username, {
                            'attr': {
                                'placeholder': 'Ingrese su correo'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        <span class="glyphicon glyphicon-eye-open"> </span> {{ form_label(formulario._password, 'Contraseña') }}
                        {{ form_widget(formulario._password, {
                            'attr': {
                                'placeholder': 'Ingrese su contraseña'
                            }
                        }) }}
                    </div>
                    <div class="checkbox">
                        <label><input value="" checked="" type="checkbox"> Recordarme</label>
                    </div>
                    <button type="submit" class="btn btn-success btn-block" formnovalidate ><span class="glyphicon glyphicon-off"></span> INICIAR SESIÓN </button>
                    {{ form_end(formulario) }}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancelar </button>
                    <h5>¿Todavía no tiene una cuenta? <a href="{{ path('user_register') }}">Regístrese</a></h5>
                    <h5>¿Ha olvidado su contraseña? <a href="#">Recupérela</a></h5>
                </div>
            </div>
        </div>
    </div>
</div>